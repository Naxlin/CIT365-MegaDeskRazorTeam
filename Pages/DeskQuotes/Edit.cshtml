@page
@model MegaDeskRazor.Pages.DeskQuotes.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Desk Quote</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DeskQuote.DeskQuoteId" />
            <input type="hidden" asp-for="DeskQuote.DeskId" />
            <input type="hidden" asp-for="DeskQuote.QuoteDate" />
            <input type="hidden" asp-for="Desk.DeskId" />
            <div class="form-group">
                <label asp-for="DeskQuote.CustomerName" class="control-label"></label>
                <input asp-for="DeskQuote.CustomerName" class="form-control" />
                <span asp-validation-for="DeskQuote.CustomerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Desk.Width" class="control-label"></label>
                <input asp-for="Desk.Width" class="form-control" />
                <span asp-validation-for="Desk.Width" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Desk.Depth" class="control-label"></label>
                <input asp-for="Desk.Depth" class="form-control" />
                <span asp-validation-for="Desk.Depth" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Desk.NumberOfDrawers" class="control-label"></label>
                <input asp-for="Desk.NumberOfDrawers" class="form-control" />
                <span asp-validation-for="Desk.NumberOfDrawers" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Desk.DesktopMaterialId" class="control-label"></label>
                <select asp-for="Desk.DesktopMaterialId" class ="form-control" asp-items="ViewBag.DesktopMaterialId">
                    <option value="0">Choose Material</option>
                </select>
            </div>

            <div class="form-group">
                <label asp-for="DeskQuote.DeliveryId" class="control-label"></label>
                <select asp-for="DeskQuote.DeliveryId" class ="form-control" asp-items="ViewBag.DeliveryId">
                    <option value="0">Choose Delivery Type</option>
                </select>
            </div>            
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a class="site-right btn btn-secondary" asp-page="./Index">Back to List</a>

            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
